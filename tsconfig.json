{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
        "baseUrl": ".",
      "rootDir": ".",
        "paths": {
          "src/*": [
            "src/*"
          ]
        }
  },
    "include": [
      "src/**/*.ts",
      "scripts/**/*.ts"
    ],
    "exclude": [
      "dist",
      "node_modules",
      "*.js",
      "eslint.config.js",
      "rollup.config.js"
    ]
}